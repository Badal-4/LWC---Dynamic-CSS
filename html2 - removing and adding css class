<template>
    <!-- divColor will change on button click to use our css classes-->
    <div class={divColor}>
        
        <!-- Button to toggle css class variable value -->
        <lightning-button variant="destructive" label="Change background color" onclick={toggleColor} class="slds-align_absolute-center"></lightning-button>
        <lightning-button variant="success" label="Change color and border" onclick={toggleColorAndBorder} class="slds-align_absolute-center"></lightning-button>
 
        <!-- Use query selector for appending/removing css classes-->
        <lightning-button variant="brand" label="Add green border" onclick={appendClass} class="slds-align_absolute-center"></lightning-button>
        <lightning-button variant="destructive" label="Remove green border" onclick={removeClass} class="slds-align_absolute-center"></lightning-button>
        <lightning-button variant="success" label="Toggle green border" onclick={toggleClass} class="slds-align_absolute-center"></lightning-button>
        
    </div>
</template>
